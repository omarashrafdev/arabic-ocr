# Application Configuration
NODE_ENV=production
PORT=3000

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=15

# File Upload Configuration
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=application/pdf

# OCR Configuration
DEFAULT_OCR_LANGUAGE=ara
OCR_DENSITY=300
OCR_IMAGE_FORMAT=png

# Cleanup Configuration
CLEANUP_DELAY_MS=600000
SESSION_CLEANUP_INTERVAL_MS=300000
FILE_CLEANER_UPLOADS_RETENTION_DAYS=1
FILE_CLEANER_OUTPUT_RETENTION_DAYS=7
FILE_CLEANER_TEMP_RETENTION_HOURS=2
FILE_CLEANER_LOGS_RETENTION_DAYS=30
FILE_CLEANER_AUTO_CLEANUP_ENABLED=true
FILE_CLEANER_AUTO_CLEANUP_INTERVAL_HOURS=6

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# SSL Configuration (for production)
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Domain Configuration
DOMAIN=localhost
PROTOCOL=http 